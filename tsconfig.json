{
  "compileOnSave": false ,
  "compilerOptions": {
    "types": ["node","highcharts"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "lib":["es2015","dom", "es6"],
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "jsx": "react",
    "strictNullChecks": false,
    "baseUrl": ".",
    "noEmitHelpers": false,
    "noResolve": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "types"
  },

  "exclude": [
    "node_modules",
    "dist",
    "*.js"
  ]
}